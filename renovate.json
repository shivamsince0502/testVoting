{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["master"],
    "ignoreTests": true,
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "schedule": [
        "at any time"
    ],
    "separateMajorMinor": false,
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch"],
             "automergeType": "branch",
              "automergeStrategy": "rebase",
            "automerge": true
        },
        {
            "matchUpdateTypes": ["major"],
            "automerge": false
        }
    ]
}
